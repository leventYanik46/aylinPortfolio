---
import type {
    PortfolioEntry,
    PortfolioEntryMetaItem,
} from '../../../../bcms/types/ts';

import Layout from '../../../layouts/Layout.astro';
import { BCMSImage } from '@thebcms/components-react';
import ContentManager from '../../../components/ContentManager';
import { bcmsPrivate } from '../../../bcms-private';
import { bcmsPublic } from '../../../bcms-public';

export async function getStaticPaths() {
    const entries = (await bcmsPrivate.entry.getAll('portfolio')) as PortfolioEntry[];
    return entries.map((e) => ({
        params: {
            slug: e.meta.en?.slug || '',
        },
    }));
}

const { slug } = Astro.params;

const portfolioEntry = (await bcmsPrivate.entry.getBySlug(
    slug,
    'portfolio',
)) as PortfolioEntry;
const portfolioEntryMeta = portfolioEntry.meta.en as PortfolioEntryMetaItem;

const clientConfig = bcmsPublic.getConfig();
---

<Layout
    title={`${portfolioEntryMeta.seo?.title || portfolioEntryMeta.title} - `}
>
    <div class="pt-6 pb-10 overflow-hidden md:pb-20 lg:pt-8 lg:pb-[120px]">
        <div class="mb-6 lg:mb-6">
            <div class="container">
                <h1
                    class="text-xl leading-none tracking-[-0.41px] font-Helvetica lg:text-[72px] lg:leading-none mb-4"
                >
                    {portfolioEntryMeta.title}
                </h1>

                    <div class="w-full flex justify-center mt-2 lg:-mt-4 mb-20 lg:mb-28">
                        <BCMSImage
                            media={portfolioEntryMeta.gallery[0]}
                            clientConfig={clientConfig}
                            className="w-[600px] max-w-full h-auto object-cover rounded-md"
                            client:load
                        />
                    </div>
            </div>
        </div>

        <div class="container">
            <div
                            class="flex items-end justify-between gap-5 h-full"
                        >
                            <div class="flex flex-col">
                                <div
                                    class="leading-none tracking-[-0.41px] font-Helvetica font-bold mb-1.5 lg:text-2xl lg:leading-none lg:mb-3"
                                >
                                    Project
                                </div>
                                <div
                                    class="text-sm leading-none tracking-[-0.41px] font-Helvetica lg:text-[26px] lg:leading-none"
                                >
                                    {
                                        portfolioEntryMeta.project_no.padStart(
                                            2,
                                            '0',
                                        )
                                    }
                                </div>
                            </div>
                            <div class="flex flex-col">
                                <div
                                    class="leading-none tracking-[-0.41px] font-Helvetica font-bold mb-1.5 lg:text-2xl lg:leading-none lg:mb-3"
                                >
                                    Company Name
                                </div>
                                <div
                                    class="text-sm leading-none tracking-[-0.41px] font-Helvetica  lg:text-[26px] lg:leading-none"
                                >
                                    {portfolioEntryMeta.brand_name}
                                </div>
                            </div>
                            <div class="flex flex-col">
                                <div
                                    class="leading-none tracking-[-0.41px] font-Helvetica font-bold mb-1.5 lg:text-2xl lg:leading-none lg:mb-3"
                                >
                                    Role
                                </div>
                                <div
                                    class="text-sm leading-none tracking-[-0.41px] font-Helvetica lg:text-[26px] lg:leading-none"
                                >
                                    {portfolioEntryMeta.role}
                                </div>
                            </div>
                            <div class="flex flex-col">
                                <div
                                    class="leading-none tracking-[-0.41px] font-Helvetica font-bold mb-1.5 lg:text-2xl lg:leading-none lg:mb-3"
                                >
                                    Year
                                </div>
                                <div
                                    class="text-sm leading-none tracking-[-0.41px] font-Helvetica lg:text-[26px] lg:leading-none"
                                >
                                    {
                                        new Date(
                                            portfolioEntryMeta.date.timestamp,
                                        ).getFullYear()
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="mt-6 lg:mt-12">
                            <ContentManager
                                items={portfolioEntryMeta.description.nodes}
                                className="text-sm leading-[1.2] tracking-[-0.41px] max-w-[1138px] mb-8 lg:text-[40px] lg:leading-[1.2] lg:mb-[72px]"
                         />
                        </div>
        </div>
    </div>
</Layout>
